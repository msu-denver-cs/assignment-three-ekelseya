
<p>
  <strong>Name:</strong>
  <%= @part.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @part.quantity %>
</p>

<p>
  <strong>Factory:</strong>
  <%= @part.factory.name %>
</p>

<p>
  <strong>Perfect for that ugly:</strong>
</p>
<ul>
  <% @part.cars.each do |car| %>
  <li><%= car.make + " " + car.model %></li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_part_path(@part), :class => "button btn btn-warning"  %>
  <% end %>
<%= link_to 'Back', parts_path, :class => "button btn btn-warning"  %>
