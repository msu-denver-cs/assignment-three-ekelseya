<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<%= image_tag("Workshop.jpg", :style => "float:right", :alt => "Workshop by gabork ") %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Factory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.name %></td>
        <td><%= part.quantity %></td>
        <td><%= part.factory.name %></td>
        <td><%= link_to 'Show', part, :class => "button btn btn-warning"  %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_part_path(part), :class => "button btn btn-warning"   %></td>
          <td><%= link_to 'Destroy', part, :class => "button btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Part', new_part_path, :class => "button btn btn-warning"  %>
  <% end %>
<%= link_to 'Home', root_path, :class => "button btn btn-warning"  %>
