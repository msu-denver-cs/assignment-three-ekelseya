<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<%= image_tag get_random_car_image, :style => "float:right", :alt => "Random Image of the Ugliest Cars"%>


<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.vin %></td>
        <td><%= link_to 'Show', car, :class => "button btn btn-warning" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_car_path(car), :class => "button btn btn-warning" %></td>
          <td><%= link_to 'Destroy', car, :class => "button btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Car', new_car_path, :class => "button btn btn-warning"  %>
<% end %>
<%= link_to 'Home', root_path, :class => "button btn btn-warning"  %>
