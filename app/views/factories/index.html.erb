<p id="notice"><%= notice %></p>

<h1>Factories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factories.each do |factory| %>
      <tr>
        <td><%= factory.name %></td>
        <td><%= factory.location %></td>
        <td><%= link_to 'Show', factory, :class => "button btn btn-warning"  %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_factory_path(factory), :class => "button btn btn-warning"  %></td>
          <td><%= link_to 'Destroy', factory, :class => "button btn btn-warning" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Factory', new_factory_path, :class => "button btn btn-warning"  %>
<% end %>
<%= link_to 'Home', root_path, :class => "button btn btn-warning"  %>
